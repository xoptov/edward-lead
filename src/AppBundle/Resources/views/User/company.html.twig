{% extends '@App/layout.html.twig' %}

{%- block form_row -%}
    <div class="{{ row_class|default('office__input--item') }}">
        {{- form_label(form) -}}
        {{- form_widget(form) -}}
        {{- form_errors(form) -}}
    </div>
{%- endblock -%}

{% form_theme form _self %}

{% block content %}
    <div class="table_leads">
        <div class="table_leads_layout exposed_leads">
            <div class="exposed_leads_title">
                <h2>Настройки компании</h2>
            </div>
            <div class="company_setup">
                <div class="setup_step">
                    <span class="coverage"></span>
                    <span class="coverage_silver"></span>
                </div>
                <p>Заполните карточку организации</p>
                {{ form_start(form, {'attr': {'class': 'office-settings__office-form office'}}) }}
                    <div class="office-settings__left-side">
                        <div class="office__input--box company">
                            <div class="office__input--item">
                                {{ form_row(form.inn, {
                                    'label': 'ИНН',
                                    'label_attr': {
                                        'class': 'office__label'
                                    },
                                    'attr': {
                                        'class': 'form__input office__input',
                                        'placeholder': 'Например: 233605110231'
                                    }
                                }) }}
                                {#<label for="company-id" class="office__label">ИНН:</label>#}
                                {#<input type="text" name="company-id" id="company-id" class="form__input office__input" placeholder="company-name" required>#}
                            </div>
                            <div class="office__input--item">
                                {{ form_row(form.shortName, {
                                    'label': 'Краткое название организации',
                                    'label_attr': {
                                        'class': 'office__label'
                                    },
                                    'attr': {
                                        'class': 'form__input office__input',
                                        'placeholder': 'Например: АН Холдинг Групп'
                                    }
                                }) }}
                                {#<label for="company-name-short" class="office__label">Краткое название организации:</label>#}
                                {#<input type="text" name="company-name-short" id="company-name-short" class="form__input office__input" placeholder="company-name" required>#}
                            </div>
                            <div class="office__input--item">
                                {{ form_row(form.largeName, {
                                    'label': 'Полное название организации',
                                    'label_attr': {
                                        'class': 'office__label'
                                    },
                                    'attr': {
                                        'class': 'form__input office__input',
                                        'placeholder': 'Например: ООО АН Холдинг Групп'
                                    }
                                }) }}
                                {#<label for="company-name-full" class="office__label">Полное название организации:</label>#}
                                {#<input type="text" name="company-name-full" id="company-name-full" class="form__input office__input" placeholder="пример: 6453202134" required>#}
                            </div>
                            <div class="office__input--item">
                                {{ form_row(form.kpp, {
                                    'label': 'КПП',
                                    'label_attr': {
                                        'class': 'office__label'
                                    },
                                    'attr': {
                                        'class': 'form__input office__input',
                                        'placeholder': 'Например: 645301001'
                                    }
