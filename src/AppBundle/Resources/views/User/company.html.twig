                                {#<input type="text" name="company-tel" id="company-tel" class="form__input office__input" placeholder="пример: 6453202134" required>#}
                            </div>
                            <div class="office__input--item">
                                {{ form_row(form.email, {
                                    'label': 'Эл. почта',
                                    'label_attr': {
                                        'class': 'office__label'
                                    },
                                    'attr': {
                                        'class': 'form__input office__input',
                                        'placeholder': 'Например: example@edward-lead.ru'
                                    }
                                }) }}
                                {#<label for="company-email" class="office__label">Эл. почта:</label>#}
                                {#<input type="text" name="company-email" id="company-email" class="form__input office__input" placeholder="пример: 6453202134" required>#}
                            </div>
                            <div class="office__input--item block-mod-14">
                                {{ form_row(form.address, {
                                    'label': 'Юридический адрес',
                                    'label_attr': {
                                        'class': 'office__label'
                                    },
                                    'attr': {
                                        'class': 'company-main-addr-textarea autoExpand',
                                        'rows': 3,
                                        'data-min-rows': 3
                                    }
                                }) }}
                                {#<label for="company-main-addr" class="office__label">Юридический адрес:</label>#}
                                {#<textarea name="company-main-addr" id="company-main-addr" class="company-main-addr-textarea  autoExpand" ows='3' data-min-rows='3' placeholder="пример: 6453202134"></textarea>#}
                            </div>
                            <div class="office__input--item ">
                                {{ form_row(form.zipcode, {
                                    'label': 'Почтовый индекс',
                                    'label_attr': {
                                        'class': 'office__label'
                                    },
                                    'attr': {
                                        'class': 'form__input office__input',
                                        'placeholder': 'Например: 353445'
                                    }
                                }) }}
                                {#<label for="company-post-index" class="office__label">Почтовый индекс:</label>#}
                                {#<input type="text" name="company-post-index" id="company-post-index" class="form__input office__input" placeholder="пример: 6453202134" required>#}
                            </div>
                            <div class="row block-mod-15">
                                <input type="checkbox" class="checkbox" name="agree-person-info" id="agree-person-info">
                                <label for="agree-person-info" class="form__label-reg ">Я прочитал(а) и согласен с <a href="#" class="label__link">правилами публикации лида</a> на платформу Edward Lead</label>
                                <input type="checkbox" class="checkbox" name="agree-info-to-distribute" id="agree-info-to-distribute">
                                <label for="agree-info-to-distribute" class="form__label-reg ">Я подтверждаю что контакт дал своё согласие на передачу данных третим лицам</label>
                            </div>
                        </div>
                    </div>
                    <div class="office-settings__right-side">
                        <div class="company__logo-choose logo-choose">
                            <div class="logo-choose__img"><span class="icon-hat"></span>
                            </div>
                            <span class="plain__text">Логотип Вашей компании:</span>
                            <div class="binded__item binded__item--mod1">
                                <button class="binded__button"><span class="icon-clip"></span>
                                </button>
                                <span class="binded__file">Без-названия.jpg</span>
                                <button class="button-close">&times;</button>
                            </div>
                            <button class="btn-middle-green btn-middle-wide">Загрузить логотип</button>
                        </div>
                        <div class="office__input--box company pos-mod-1">
                            <div class="office__input--item">
                                <label for="company-count" class="office__label">Расчётный счёт:</label>
                                <input type="text" name="company-count" id="company-count" class="form__input office__input" placeholder="пример: 6453202134" required>
                            </div>
                            <div class="office__input--item">
                                <label for="company-bik-code" class="office__label">БИК:</label>
                                <input type="text" name="company-bik-code" id="company-bik-code" class="form__input office__input" placeholder="пример: 6453202134" required>
                            </div>
                        </div>
                        <div class="row">
                            <button class="btn-middle-green btn-middle-wide btn-pressed u-m-auto" type="submit">Сохранить</button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
        {% include '@App/block_copyright.html.twig' %}
    </div>
