                            <div class="office__input--item ">
                                {{ form_row(form.phone, {
                                    'label': 'Телефон для входящих звонков',
                                    'label_attr': {
                                        'class': 'office__label'
                                    },
                                    'attr': {
                                        'class': 'form__input office__input',
                                        'placeholder': 'Например: 8 800 000 00 00'
                                    }
                                }) }}
