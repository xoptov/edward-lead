{% extends '@SonataAdmin/CRUD/base_show_field.html.twig' %}

{% block field%}
    {%- if value is empty -%}
        Запись отсутствует
    {% else %}
        <audio controls src="{{ asset('uploads/' ~ value) }}">
            Ваш браузер не позволяет прослушивавать аудио записи.
        </audio>
    {% endif %}
{% endblock %}