{% extends "@App/v3/layout_light.html.twig" %}

{% block header_widget_content -%}
    <span>{{ 'header.no_account'|trans }}</span>
    <a href="{{ path('app_registration') }}">{{ 'header.registration'|trans }}</a>
{%- endblock %}

{% block content %}
    <!-- Wrap -->

    <div class="p-external__box login">

        <!-- Lagin -->

        <a href="{{ path('app_login')}}" class="login__link">{{ 'header.login'|trans }}</a>

        <!-- Title -->

        <div class="title">
            <h3 class="title__h3">Восстановление пароля</h3>
        </div>

        <!-- Subtxt -->

        <p class="login__subtxt">Укажите свой E-mail который был указан при регистрации, мы отправим ссылку на восстановление пароля</p>

        <!-- Form -->
        {{ form_start(form, {'attr':{'class':'login__form mail__form fx fx-wrap row'}})}}
            <div class="col-7">
                <div class="form__input form__input__item">
                    <span class="form__input__title">E-mail:</span>
                    <label class="form__input__field">
                        {{ form_errors(form.email)}}
                        {{ form_row(form.email, {"label":false, "attr":{"class":"form_email","placeholder":"Введите Ваш E-mail"}}) }}
                        <span class="form__input__surely"></span>
                    </label>
                </div>
            </div>
            <div class="col-12">
                {{ form_widget(form.submit, {"label":"Восстановить пароль", "attr":{"class":"btn btn__green mail__form__btn"}}) }}
            </div>
            {% if error is defined -%}
                <div class="col-12 row" style="text-align:center; padding-top: 20px;">
                    <span style="color:#ff0000;">{{ error }}</span>
                </div>
            {%- endif %}
        {{ form_end(form) }}
    </div>
{% endblock %}